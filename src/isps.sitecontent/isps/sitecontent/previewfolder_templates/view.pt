<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="isps.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="page-header">
      <h1 class="documentFirstHeading"
        tal:content="context/Title">Title inserted here</h1>
    </div>

    <p class="lead documentDescription"
      tal:condition="context/Description"
      tal:content="context/description" />

    <tal:items tal:define="items view/contained_items">
      <div class="tile" tal:repeat="item items">
        <div class="row-fluid">
          <div tal:condition="exists:item/image" class="span4">
            <a href="" tal:attributes="href item/getURL">
              <img tal:define="item_obj item/getObject;
                               scales item_obj/@@images"
                tal:condition="item_obj/image"
                tal:replace="structure python:scales.scale('image', scale='large').tag()" />
            </a>
          </div>
          <div class="span8">
            <h6>32.23.2066</h6>
            <h2 tal:content="item/Title" />
            <p tal:content="item/Description" />
            <a href="" tal:attributes="href item/getURL">
              Mehr &raquo;</a>
          </div>
        </div>
      </div>
    </tal:items>
    
  </metal:content-core>
</metal:main>

</body>
</html>

